{{#if isRemoteSearch}}
  {{#if isCustomAction}}
    {{#power-select
      searchEnabled=searchEnabled
      options=listSource
      search=(action 'searchAction')
      onclose=(action 'onclose')
      searchField=searchField
      renderInPlace=renderInPlace
      selected=selectedOption
      placeholder=placeHolder
      onchange=(action 'onchange')
      triggerClass=triggerClass
      dropdownClass=dropdownClass
    as |option|}}
        {{#if optionLabel}}
          {{get-property option optionLabel}}
        {{else}}
          {{option}}
        {{/if}}
    {{/power-select}}
  {{else}}
    {{#power-select
      searchEnabled=searchEnabled
      options=listSource
      search=(action 'searchAction')
      onclose=(action 'onclose')
      searchField=searchField
      renderInPlace=renderInPlace
      selected=selectedOption
      placeholder=placeHolder
      onchange=(action (mut selectedOption))
      triggerClass=triggerClass
      dropdownClass=dropdownClass
    as |option|}}
        {{#if optionLabel}}
          {{get-property option optionLabel}}
        {{else}}
          {{option}}
        {{/if}}
    {{/power-select}}
  {{/if}}
{{else}}
  {{#power-select
    searchEnabled=searchEnabled
    options=listSource
    searchField=searchField
    renderInPlace=renderInPlace
    selected=selectedOption
    placeholder=placeHolder
    onchange=(action (mut selectedOption))
    triggerClass=triggerClass
    dropdownClass=dropdownClass
    as |option|}}
      {{#if optionLabel}}
        {{get-property option optionLabel}}
      {{else}}
        {{option}}
      {{/if}}
  {{/power-select}}
{{/if}}
{{yield}}